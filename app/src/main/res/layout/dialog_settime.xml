<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content">
    <TimePicker
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/dateTime"
        android:numbersTextColor="@color/color_black"
        android:numbersSelectorColor="@color/color_appbar"
        android:headerBackground="@color/color_appbar"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop">
    </TimePicker>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtHuy"
            android:layout_marginLeft="@dimen/_60sdp"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/color_appbar"
            android:textStyle="bold"
            android:text="@string/huy"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/txtDongY"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/color_appbar"
            android:textStyle="bold"
            android:text="@string/dong_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>